        "upload": "yarn build && git add . && git commit -m %NPM_PACKAGE_VERSION% && git push origin master && yarn deploy ",
        "electron": "electron .",
        "refresh": "yarn upgrade --latest && yarn rebuild",
        "try": "yarn build && yarn package "
